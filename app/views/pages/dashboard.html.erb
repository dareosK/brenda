<div class="container-main margin-from-navbar dashboard-color">
  <h2>Welcome, <strong><%= @user.name %>!</strong></h1>
  <br>
  <br>
  <div class="dashboard-flex">
    <div class="articles-exhibitions">
      <h3>your articles</h3>
      <ol>
        <% @articles.each do |article| %>
          <li><%= article.title %></li>
        <% end %>
      </ol>
      <br>
      <br>
      <h3>your exhibitions</h3>
      <ol>
        <% @exhibitions.each do |exhibition| %>
          <li><%= exhibition.title %></li>
        <% end %>
      </ol>
    </div>

    <div class="new-articles-exhibitions">
      <h3>New Article</h3>
      <%= simple_form_for(@article) do |f| %>
        <%= f.input :author %>
        <%= f.input :title %>
      <!--   <%#= f.input :body %> -->
        <%= f.input :tagline %>
        <%= f.rich_text_area :rich_body %>
        <%= f.input :date, html5: true  %>
        <%= f.input :photo, as: :file %>
        <div class="btn w-100 dashboard-button">
          <%= f.submit %>
        </div>
      <% end %>

      <br>
      <br>
      <h3>New Exhibition</h3>
      <%= simple_form_for(@exhibition) do |f| %>
        <%= f.input :title %>
        <%= f.input :artists %>
        <%= f.input :institution_name %>
        <%= f.input :institution_address %>
        <%= f.input :curated_by %>
        <%= f.input :text %>
        <div class="d-flex">
          <%= f.input :start_date, html5: true  %>
          <%= f.input :end_date, html5: true  %>
        </div>
        <%= f.input :photos, as: :file, input_html: { multiple: true } %>
        <div class="btn w-100 dashboard-button">
          <%= f.submit %>
        </div>
      <% end %>
    </div>
  </div>
</div>


